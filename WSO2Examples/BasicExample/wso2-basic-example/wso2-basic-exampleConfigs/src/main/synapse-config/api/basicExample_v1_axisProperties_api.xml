<?xml version="1.0" encoding="UTF-8"?>
<api context="/axis2" name="basicExample_v1_axisProperties_api" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST" uri-template="/mock">
        <inSequence>
            <property name="trpContentType" type="STRING" expression="$trp:Content-Type" />
            <log level="full">
                <property name="trp: content-type" expression="$trp:Content-Type"/>
                <property name="axis2: messageType" expression="$axis2:messageType"/>
                <property name="axis2: contentType" expression="$axis2:ContentType"/>
            </log>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/messageTypeXML">
        <inSequence>
            <property name="trpContentType" type="STRING" expression="$trp:Content-Type" />
            <log level="full">
                <property name="trp: content-type" expression="$trp:Content-Type"/>
                <property name="axis2: messageType" expression="$axis2:messageType"/>
                <property name="axis2: contentType" expression="$axis2:ContentType"/>
            </log>
            <property name="messageType" value="application/xml" scope="axis2"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/ContentTypeXML">
        <inSequence>
            <property name="trpContentType" type="STRING" expression="$trp:Content-Type" />
            <log level="full">
                <property name="trp: content-type" expression="$trp:Content-Type"/>
                <property name="axis2: messageType" expression="$axis2:messageType"/>
                <property name="axis2: contentType" expression="$axis2:ContentType"/>
            </log>
            <property name="messageType" value="application/xml" scope="axis2"/>
            <property name="ContentType" value="application/xml" scope="axis2"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
    <resource methods="POST" uri-template="/noEntityBody">
        <inSequence>
            <property name="trpContentType" type="STRING" expression="$trp:Content-Type" />
            <log level="full">
                <property name="trp: content-type" expression="$trp:Content-Type"/>
                <property name="axis2: messageType" expression="$axis2:messageType"/>
                <property name="axis2: contentType" expression="$axis2:ContentType"/>
            </log>
            <property name="NO_ENTITY_BODY" value="true" scope="axis2" type="BOOLEAN"/>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
